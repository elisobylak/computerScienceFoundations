public class Die
{
  public static void main(String[] args)
  {
    private int faceValue;
    private final int MAX = 6;
    
    public Die() {
          faceValue = 1;
        }

        public void roll() {
          faceValue = (int) (Math.random() * MAX) + 1;
        }

        public int getFaceValue() {
          return faceValue;
        }
      }